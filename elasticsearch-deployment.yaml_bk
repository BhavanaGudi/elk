apiVersion: extensions/v1beta1
kind: ReplicaSet
metadata:
  name: elasticsearch
spec:
  replicas: 1
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: elasticsearch
    spec:
      containers:
        - name: elasticsearch
          image: docker.elastic.co/elasticsearch/elasticsearch-oss:6.1.1
          ports:
            - containerPort: 9200
            - containerPort: 9300
